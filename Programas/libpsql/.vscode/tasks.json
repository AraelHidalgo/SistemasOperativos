{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang compilar archivo activo",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/Applications/Postgres.app/Contents/Versions/15/include",
                "-L/Applications/Postgres.app/Contents/Versions/15/lib",
                "-lpq"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarea generada por el depurador."
        }
    ],
    "version": "2.0.0"
}